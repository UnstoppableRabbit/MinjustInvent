<Window
    x:Class="MinjustInvent.Telephones"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MinjustInvent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Телефония"
    Width="950"
    Height="450"
    Icon="telephone-clipart-icon-7.png"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="phonesGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Post}"
                    Header="Должность" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Name}"
                    Header="ФИО" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding NameDepartament}"
                    Header="Отдел" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding CityPhone}"
                    Header="Городской телефонный номер" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding InternalPhone}"
                    Header="Внутренний телефонный номер" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Office}"
                    Header="Кабинет" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                x:Name="backButton"
                Width="120"
                Height="30"
                Margin="10,10,15,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Background="Yellow"
                Click="Back"
                Content="Назад"
                FontFamily="MS Reference Sans Serif"
                FontSize="18" />

            <Button
                x:Name="updateButton"
                Width="120"
                Height="30"
                Margin="180,10,15,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Yellow"
                Click="updateButton_Click"
                Content="Обновить"
                FontFamily="MS Reference Sans Serif"
                FontSize="18" />

            <Button
                x:Name="deleteButton"
                Width="120"
                Height="30"
                Margin="180,10,15,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Yellow"
                Click="deleteButton_Click"
                Content="Удалить"
                FontFamily="MS Reference Sans Serif"
                FontSize="18" />
        </StackPanel>
    </Grid>
</Window>
