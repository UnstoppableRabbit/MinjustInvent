<Window x:Class="MinjustInvent.Cards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinjustInvent"
        mc:Ignorable="d"
        Icon="e893212583c5486fbb041cfe63bed219.png"
        WindowStartupLocation="CenterScreen"
        Title="Пропуски" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid x:Name="phonesGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding }"
                    Header="Должность" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Name}"
                    Header="ФИО" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding NameDepartament}"
                    Header="Отдел" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Office}"
                    Header="Кабинет" />
                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding InternalPhone}"
                    Header="Номер карты" />
               
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                x:Name="backButton"
                Width="120"
                Height="30"
                Margin="10,10,15,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Background="Yellow"
                Click="Back"
                Content="Назад"
                FontFamily="MS Reference Sans Serif"
                FontSize="18" />

            <Button
                x:Name="updateButton"
                Width="120"
                Height="30"
                Margin="180,10,15,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Yellow"
                Click="updateButton_Click"
                Content="Обновить"
                FontFamily="MS Reference Sans Serif"
                FontSize="18" />

            <Button
                x:Name="deleteButton"
                Width="120"
                Height="30"
                Margin="180,10,15,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Yellow"
                Click="deleteButton_Click"
                Content="Удалить"
                FontFamily="MS Reference Sans Serif"
                FontSize="18" />
        </StackPanel>
    </Grid>
</Window>
